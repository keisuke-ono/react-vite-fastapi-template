# 認証タイプ (local, dev, trial, prod)
AUTH_TYPE=local

# ローカル環境用
LOCAL_SECRET_KEY=your-local-secret-key

# 開発環境用
DEV_AWS_ACCESS_KEY_ID=your-dev-access-key
DEV_AWS_SECRET_ACCESS_KEY=your-dev-secret-key
DEV_AWS_REGION=ap-northeast-1
DEV_COGNITO_USER_POOL_ID=your-dev-user-pool-id
DEV_COGNITO_CLIENT_ID=your-dev-client-id
DEV_COGNITO_SECRET_KEY=your-dev-secret-key

# トライアル環境用
TRIAL_AWS_ACCESS_KEY_ID=your-trial-access-key
TRIAL_AWS_SECRET_ACCESS_KEY=your-trial-secret-key
TRIAL_AWS_REGION=ap-northeast-1
TRIAL_COGNITO_USER_POOL_ID=your-trial-user-pool-id
TRIAL_COGNITO_CLIENT_ID=your-trial-client-id
TRIAL_COGNITO_SECRET_KEY=your-trial-secret-key

# 本番環境用
PROD_AWS_ACCESS_KEY_ID=your-prod-access-key
PROD_AWS_SECRET_ACCESS_KEY=your-prod-secret-key
PROD_AWS_REGION=ap-northeast-1
PROD_COGNITO_USER_POOL_ID=your-prod-user-pool-id
PROD_COGNITO_CLIENT_ID=your-prod-client-id
PROD_COGNITO_SECRET_KEY=your-prod-secret-key

# アプリケーション設定
NODE_ENV=development
VITE_API_URL=http://localhost:8000

# データベース設定
DYNAMODB_ENDPOINT=http://localhost:8001
DYNAMODB_TABLE_NAME=users 